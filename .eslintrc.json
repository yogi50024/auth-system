{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "space-before-function-paren": ["error", "never"],
    "semi": ["error", "always"]
  },
  "ignorePatterns": [
    "node_modules/",
    "coverage/",
    "logs/",
    "exports/"
  ]
}